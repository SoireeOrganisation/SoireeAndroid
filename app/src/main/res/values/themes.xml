<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_primary</item>
        <item name="colorPrimaryVariant">@color/custom_primary_dark</item>
        <item name="colorOnPrimary">@color/custom_primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_secondary</item>
        <item name="colorSecondaryVariant">@color/custom_secondary_dark</item>
        <item name="colorOnSecondary">@color/custom_secondary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MainActivityTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_primary</item>
        <item name="colorPrimaryVariant">@color/custom_primary_dark</item>
        <item name="colorOnPrimary">@color/custom_primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_secondary</item>
        <item name="colorSecondaryVariant">@color/custom_secondary_dark</item>
        <item name="colorOnSecondary">@color/custom_secondary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomButtonStyle" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTextLayoutStyle" parent="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="helperText">@string/obligatory_text</item>
    </style>




</resources>